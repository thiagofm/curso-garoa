<h1>Nova tarefa</h1>

<%= form_for @task, :remote => true do |f| %>
  <%= f.label 'Título' %><br />
  <%= f.text_field :title %><br />
  <%= f.label 'Descrição' %><br />
  <%= f.text_area :description, :style => 'width:171px;height:115px;' %><br />
  <%= f.label 'Tags' %><br />
  <%= f.text_field :tags_text %><br />
  <%= f.submit %>
<% end %>
